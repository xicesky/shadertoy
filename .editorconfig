# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

[*.adoc]
charset = utf-8

[*.md]
charset = utf-8

[*.{c,cpp,h,glsl}]
charset = utf-8
indent_style = space
indent_size = 4
